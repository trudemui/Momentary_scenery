<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h2>ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, 'アドレス' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "40*40" %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'パスワード' %><br />
            <%= f.password_field :password, autocomplete: "current-password", :size => "40*40" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "登録", class:'btn btn-success' %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
