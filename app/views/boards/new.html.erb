<div class="container">
    <h2>スレッド作成フォーム</h2>
        <%= form_for(@board) do |f| %>
            <div class="form-group">
                <%= f.label :title, 'タイトル' %>
                <%= f.text_field :title, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :name, '名前' %>
                <%= f.text_field :name, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :body, '本文' %>
                <%= f.text_area :body, class: 'form-control', rows: 10 %>
            </div>
            <%= f.submit '作成', class:'btn btn-success' %>
        <% end %>
</div>
