<div class="container">
    <div class="row">
        <% @photos.each do |photo| %>
            <div class="col-md-3">
                <div class="user-photo-box">
                    <%= image_tag photo.image.thumb.to_s %>
                </div>
                <div class="text-box">
                    <%= link_to "#{photo.title}", photo_path(photo.id) %>
                </div>
            </div>
        <% end %>
    </div>
    <div class="btn">
        <%= link_to 'トップページへ戻る', root_path, class:'btn btn-default' %>
    </div>
</div>