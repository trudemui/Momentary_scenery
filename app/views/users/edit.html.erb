
<div class="container">
        <div class="row">
        <h2>ユーザー情報編集</h2>
                <%= form_for(@user) do |f| %>
                <%# <%= render 'layouts/error_message', form: @user %> 
                    <div class="form-group">
                        <div class="col-md-2">
                            <%= f.label :name, '名前' %>
                        </div>
                        <div class="col-md-10">
                            <table class="table" style="table-layout:fixed;">
                                <tr>
                                    <th>姓</th>
                                    <th>名</th>
                                </tr>
                                <tr>
                                    <td><%= f.text_field :last_name, size: "10x10", class: "form-control" %></td>
                                    <td><%= f.text_field :first_name, size: "10x10", class: "form-control" %></td>
                                </tr>
                                <tr>
                                    <th>姓　(カナ)</th>
                                    <th>名　(カナ)</th>
                                </tr>
                                <tr>
                                    <td><%= f.text_field :last_kana_name, size: "10x10", class: "form-control" %></td>
                                    <td><%= f.text_field :first_kana_name, size: "10x10", class: "form-control" %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <%= f.label :email, 'メールアドレス' %>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <%= f.text_field :email, size: "10x10", class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <%= f.label :nickname, 'アカウント名' %>
                    </div>
                    <div class="col-md-10">
                        <div class="form-group">
                            <%= f.text_field :nickname, size: "10x10", class: "form-control" %>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <%= f.label :profile_image_id, 'ユーザー画像' %>
                    </div>
                    <div class="col-md-10">
                         <div class="form-group">
                            <%= f.file_field :image %>
                        </div>
                    </div>
                    <div class="actions_update">
                        <%= f.submit '更新', class:"btn btn-success" %>
                    </div>
                <% end %>
        </div>
</div>